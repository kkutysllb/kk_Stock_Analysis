{
  "name": "kk-stock-analysis-desktop",
  "version": "1.0.0",
  "description": "KK股票量化分析系统 - 专业桌面端",
  "main": "dist-electron/main.js",
  "homepage": "./",
  "scripts": {
    "dev": "vite",
    "build": "vite build && npm run build:electron",
    "build:with-typecheck": "vue-tsc && vite build && npm run build:electron",
    "build:electron": "tsc electron/main.ts electron/preload.ts --outDir dist-electron --target es2020 --module commonjs --moduleResolution node --esModuleInterop --skipLibCheck",
    "preview": "vite preview",
    "electron:dev": "concurrently \"npm run dev\" \"npm run build:electron && wait-on http://localhost:5173 && ELECTRON_RENDERER_URL=http://localhost:5173 electron .\"",
    "electron:build": "npm run build && electron-builder",
    "electron:build:win": "npm run build && electron-builder --win",
    "electron:build:mac": "npm run build && electron-builder --mac",
    "electron:build:linux": "npm run build && electron-builder --linux"
  },
  "dependencies": {
    "@element-plus/icons-vue": "^2.3.1",
    "@heroicons/vue": "^2.2.0",
    "axios": "^1.6.5",
    "dayjs": "^1.11.10",
    "echarts": "^5.4.3",
    "element-plus": "^2.4.4",
    "highlight.js": "^11.9.0",
    "html2canvas": "^1.4.1",
    "jspdf": "^3.0.1",
    "jspdf-autotable": "^5.0.2",
    "lodash-es": "^4.17.21",
    "lucide-vue-next": "^0.523.0",
    "marked": "^12.0.0",
    "mermaid": "^11.8.0",
    "pinia": "^2.1.7",
    "vue": "^3.4.15",
    "vue-echarts": "^6.6.1",
    "vue-router": "^4.2.5"
  },
  "devDependencies": {
    "@tailwindcss/typography": "^0.5.10",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^20.11.5",
    "@vitejs/plugin-vue": "^5.0.3",
    "assert": "^2.1.0",
    "autoprefixer": "^10.4.16",
    "bcryptjs": "^3.0.2",
    "chalk": "^5.4.1",
    "concurrently": "^8.2.2",
    "electron": "^28.2.0",
    "electron-builder": "^24.9.1",
    "postcss": "^8.4.33",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.3.3",
    "vite": "^5.0.12",
    "vue-tsc": "^3.0.4",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.kk.stock-analysis",
    "productName": "KK Stock Analysis",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.finance",
      "icon": "build/icon.icns"
    },
    "win": {
      "icon": "build/icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "linux": {
      "icon": "build/icon.png",
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        }
      ]
    }
  },
  "author": "KK StockQuant Analysis Team",
  "license": "MIT",
  "keywords": [
    "stock",
    "analysis",
    "ai",
    "content-generation",
    "desktop"
  ]
}
